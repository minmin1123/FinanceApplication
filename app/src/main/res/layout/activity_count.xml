<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_orange">

        <ImageView
            android:id="@+id/backIv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:src="@drawable/back" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/beginDateLl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="起始日期"
                android:textSize="18sp"
                android:textColor="@color/font_gray"
                />

            <TextView
                android:id="@+id/beginDateTv"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2018-05-01"
                android:textSize="20sp"
                android:textColor="@color/theme_orange"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/endDateLl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="结束日期"
                android:textSize="18sp"
                android:textColor="@color/font_gray"
                />
            <TextView
                android:id="@+id/endDateTv"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2018-05-31"
                android:textSize="20sp"
                android:textColor="@color/theme_orange"
                />

        </LinearLayout>

        <Button
            android:id="@+id/quaryBt"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="确定"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/add_bt_bg"
            android:textSize="18sp"
            android:textColor="@color/font_gray"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/itemFl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_below="@+id/itemFl2">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="4dp"
                    app:cardBackgroundColor="@color/bg_gray"
                    app:cardCornerRadius="20dp"
                    app:elevation="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:padding="7dp"
                            android:text="总存(元)"
                            android:textColor="@color/font_gray"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/line_gray" />

                        <TextView
                            android:id="@+id/incomeTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/theme_orange"
                            android:textSize="50sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/itemFl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/itemFl3"
                android:layout_margin="4dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="4dp"
                    app:cardBackgroundColor="@color/bg_gray"
                    app:cardCornerRadius="20dp"
                    app:elevation="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:padding="7dp"
                            android:text="总支出(元)"
                            android:textColor="@color/font_gray"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/line_gray" />

                        <TextView
                            android:id="@+id/expendTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/theme_orange"
                            android:textSize="50sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </FrameLayout>

            <FrameLayout
                android:id="@+id/itemFl3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="4dp"
                    app:cardBackgroundColor="@color/bg_gray"
                    app:cardCornerRadius="20dp"
                    app:elevation="30dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:padding="7dp"
                            android:text="总收入(元)"
                            android:textColor="@color/font_gray"
                            android:textSize="18sp" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/line_gray" />

                        <TextView
                            android:id="@+id/profitTv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/theme_orange"
                            android:textSize="50sp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>


            </FrameLayout>

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>